/* For jQuery Animation */
.fade-in {
    opacity: 0;
}

.fade-in.appear {
    opacity: 1;
}

.zero1 {
    transition: opacity 50ms ease-in;
}
.zero2 {
    transition: opacity 750ms ease-in;
}
.one {
    transition: opacity 250ms ease-in;
}
.two {
    transition: opacity 750ms ease-in;
}
.three {
    transition: opacity 1500ms ease-in;
}
.four {
    transition: opacity 250ms ease-in;
}
.five {
    transition: opacity 500ms ease-in;
}

/* My Work Section using GRID */
.section3{
background-color: white;
}

.darkHeading{
    color: black;
    font-family: Bebas Neue;
    font-style: normal;
    font-weight: bold;
    font-size: 48px;
    line-height: 56px;
}

.container{
    display: grid;
    grid-template-columns: 50% 50%;
    grid-template-rows: 1fr 1fr 1fr;
    grid-template-areas: "row1 row1" "row2 row2" "row3 row3";
    padding-top: 5%;
    padding-bottom: 15%;
    padding-left: 5%;
    padding-right: 5%;
}

.row1{
    grid-area: row1;
    background-color: #D3F4E7;
    opacity: 0.85;
    display: grid;
    grid-template-columns: 50% 50%;
}

.row2{
    grid-area: row2;
    background-color: #FED9B7;
    display: grid;
    grid-template-columns: 50% 50%;
}

.row3{
    grid-area: row3;
    background-color:#FDFCDC;
    opacity: 0.85;
    display: grid;
    grid-template-columns: 50% 50%;
}

/* common properties for class row1, row2, row3 */

