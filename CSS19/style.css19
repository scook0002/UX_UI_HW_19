/* LinkedIn Animated Button */
.center1 {
    position: relative;
}

.solid-blue{
    width: 174px;
    height: 36px;
    background: #F07167;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    color: white;
    border: none;
    cursor: pointer;
}

svg {
    position: absolute;
    left: 0;
    top: 0;
    fill: none;
    stroke: black;
    stroke-dasharray: 150 480;
    stroke-dashoffset: 150;
    transition: 1s ease-in-out;
}

.solid-blue:hover {
    transition: 1s ease-in-out;
    background: #FED9B7;
    color: white;
}

.solid-blue:hover {
    stroke-dashoffset: -480;
}

.solid-blue:hover svg {
    stroke-dashoffset: -480;
}

.no-fill{
    width: 174px;
    height: 36px;
    color: white;
    background: none;
    border: none;
    margin-left: 1%;
    cursor: pointer;
    transition: all 300ms cubic-bezier(0.19, 1, 0.22, 1);
}

.no-fill:hover {
    border: 1px solid;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0,25);
}

/* End of Button Animation */

