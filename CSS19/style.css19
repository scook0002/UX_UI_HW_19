/* media queries */
@media screen and (max-width:600px){
    .image{
        height: auto;
        width: 100%;
    }

    .description{
        text-align: center;
        width: 100%;
    }

    .container{
        /* display: grid; */
        grid-template-columns: 1fr;
        grid-template-rows: 1fr 1fr 1fr 1fr 1fr 1fr;
        grid-template-areas: 
        "row1" 
        "row1" 
        "row2" 
        "row2" 
        "row3" 
        "row3";
    }

    .summary{
        width: 100%;
        height:auto;
    }
    
    .mockup{
        width: 100%;
        height:auto;
    }

    .row1{
        width: 100%;
        height: auto;
    }

    #section3{
        display: none;
    }

    .whatIDo {
        display: flex;
        flex-flow: column;
    }

    .myTools {
        width: 80%;
    }

}